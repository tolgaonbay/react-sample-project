{
    "plugins": [
        "eslint-plugin-react"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "rules": {
        "quotes": "off",
        "no-trailing-spaces": "off",
        "eol-last": "off",
        "no-unused-vars": "error",
        "no-underscore-dangle": "off",
        "no-alert": "error",
        "no-lone-blocks": "off",
        "no-undef": "error",
        "react/jsx-uses-vars": "error",
        "react/jsx-uses-react": "error" 
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "jQuery": true,
        "$": true
    }
}
